<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainAccountFragment">
    <fragment
        android:id="@+id/mainAccountFragment"
        android:name="com.example.fyp.account_management.ui.fragment.MainAccountFragment"
        android:label="fragment_main_account"
        tools:layout="@layout/fragment_main_account" >
        <action
            android:id="@+id/action_mainAccountFragment_to_editAccountFragment"
            app:destination="@id/editAccountFragment" />
        <action
            android:id="@+id/action_mainAccountFragment_to_updatePasswordFragment"
            app:destination="@id/updatePasswordFragment" />
        <action
            android:id="@+id/action_mainAccountFragment_to_manageStaffFragment"
            app:destination="@id/manageStaffFragment" />
    </fragment>
    <fragment
        android:id="@+id/editAccountFragment"
        android:name="com.example.fyp.account_management.ui.fragment.EditAccountFragment"
        android:label="fragment_edit_account"
        tools:layout="@layout/fragment_edit_account" />
    <fragment
        android:id="@+id/updatePasswordFragment"
        android:name="com.example.fyp.account_management.ui.fragment.UpdatePasswordFragment"
        android:label="fragment_update_password"
        tools:layout="@layout/fragment_update_password" />
    <fragment
        android:id="@+id/manageStaffFragment"
        android:name="com.example.fyp.account_management.ui.fragment.ManageStaffFragment"
        android:label="ManageStaffFragment" >
        <action
            android:id="@+id/action_manageStaffFragment_to_staffDetailsFragment"
            app:destination="@id/staffDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/staffDetailsFragment"
        android:name="com.example.fyp.account_management.ui.fragment.StaffDetailsFragment"
        android:label="fragment_staff_details"
        tools:layout="@layout/fragment_staff_details" >
        <argument
            android:name="command"
            app:argType="string"
            android:defaultValue="add" />
    </fragment>
</navigation>